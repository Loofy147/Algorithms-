{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js$",
    "excludePattern": "(node_modules|docs)"
  },
  "opts": {
    "destination": "./docs/api",
    "encoding": "utf8",
    "readme": "./README.md",
    "recurse": true,
    "template": "node_modules/docdash",
    "tutorials": "./docs"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
